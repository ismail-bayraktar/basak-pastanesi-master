# General
NODE_ENV=development
PORT=4001

# Database (MongoDB)
MONGODB_URI=mongodb://root:password@localhost:27017/basak-pastanesi?authSource=admin
# Or individual parts:
# MONGO_USERNAME=root
# MONGO_PASSWORD=password
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_DB=basak-pastanesi
# MONGO_AUTHSOURCE=admin

# Cache (Redis)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379

# Security & Auth
JWT_SECRET=your_super_secret_jwt_key_change_this
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cloudinary (Images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CSP_IMAGE_SOURCES=res.cloudinary.com

# Frontend URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:4001
BACKEND_URL=http://localhost:4001

# Swagger
SWAGGER_DEV_URL=http://localhost:4001
SWAGGER_PROD_URL=https://api.basakpastanesi.com

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password

# Payment & Banking
BANK_IBAN=TR000000000000000000000000
BANK_ACCOUNT_NAME=Basak Pastanesi Gıda
BANK_NAME=Banka Adı

# Features
SMS_ENABLED=false
RETRY_MAX_ATTEMPTS=5
WEBHOOK_BASE_URL=https://api.basakpastanesi.com/api/webhook/courier
